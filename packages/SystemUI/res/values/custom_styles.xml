<resources>

    <!-- App side bar -->
    <style name="AppSidebarItemText" >
        <item name="android:textColor">@color/sidebar_item_text_color</item>
        <item name="android:textSize">@dimen/item_title_text_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@color/sidebar_item_text_shadow_color</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:shadowDx">2.0</item>
        <item name="android:shadowDy">2.0</item>
    </style>  

    <!-- Pure Tuner Theme-->
    <style name="ExTunerSettings" parent="@android:style/Theme.Material.Settings">
        <item name="preferenceTheme">@style/TunerPreferenceTheme</item>
    </style>

    <!-- Custom Carrier Label -->
    <style name="TextAppearance.StatusBar.CarrierLabel" parent="@*android:style/TextAppearance.StatusBar.Icon">
        <!-- Note: must be dp to fit in status bar -->
        <item name="android:textSize">@dimen/status_bar_carrier_height</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/status_bar_carrier_color</item>
    </style>

    <!-- Screenshot Crop & Share -->
    <style name="CropDialogAnimations">
        <item name="android:windowEnterAnimation">@anim/crop_in</item>
        <item name="android:windowExitAnimation">@anim/crop_out</item>
    </style>

    <style name="ScreenshotEditorStyle" parent="@android:style/Theme.Material" >
    </style>

    <!-- Base battery metter drawable style -->
    <style name="BatteryMeterViewDrawable">
        <!-- Gravity used for positioning text within the battery meter -->
        <item name="android:gravity">center</item>
        <item name="blendMode">clear</item>
    </style>

    <!-- Battery meter drawable styles -->
    <style name="BatteryMeterViewDrawable.Portrait"/>
    <style name="BatteryMeterViewDrawable.Landscape"/>
    <style name="BatteryMeterViewDrawable.Circle"/>

    <!-- Switch bar text appearance -->
    <style name="TextAppearance.SwitchBar" parent="@android:style/TextAppearance.Material.Title">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
    </style>

    <!-- header text shadows -->
    <style name="TextAppearance.StatusBar.Expanded.Clock.Shadow" parent="TextAppearance.StatusBar.Expanded.Clock" >
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="TextAppearance.StatusBar.Expanded.Date.Shadow" parent="TextAppearance.StatusBar.Expanded.Date" >
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <!-- OmniJaws -->
    <style name="TextAppearance.StatusBar.Expanded.Weather">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="TextAppearance.StatusBar.Expanded.Weather.Detailed">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <!-- Slim recents -->
    <style name="card_header_favorite_icon">
        <item name="android:layout_width">@dimen/recent_favorite_icon_size</item>
        <item name="android:layout_height">@dimen/recent_favorite_icon_size</item>
        <item name="android:layout_marginStart">-18dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <!-- Expanded weather -->
    <style name="TextAppearance.StatusBar.Expanded.WeatherTemp">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/status_bar_temperature_text_color</item>
    </style>

    <style name="TextAppearance.StatusBar.Expanded.WeatherLocation">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/status_bar_temperature_location_text_color</item>
    </style>

</resources>
